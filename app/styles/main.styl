.login-note
  padding: 10px
.sign-in-button
  margin-top: 10px
  cursor: pointer

h1
  padding-bottom: 5px

.sidebar
  padding: 12px
  textarea
    width: 100%
    height: 100px

.composable-tweet
  &-info
    float: right
  &-character-count
    color: gray
    &-invalid
      color: #b83535

.tweets-header
  padding-left: 12px
  border-bottom: 1px solid #e8e8e8

.tweet
  position: relative
  min-height: 75px
  padding: 9px 12px 9px
  border-bottom: 1px solid #e8e8e8
  // border-radius: 5px
  &-content
    margin-left: 58px
  &-author-full-name
    color: #333
  &-author-username
    color: gray
  &-text
    -webkit-margin-after: 0
    word-wrap: break-word
  &-footer
    overflow: hidden

.avatar
  position: absolute
  top: 12px
  left: 12px
  width: 48px
  height: 48px
  border-radius: 5px

.username
  color: gray
